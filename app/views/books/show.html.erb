<div class="row">
<div class= "col-xs-3">

<%= render 'users/userinfo', user: @user %>

<%= render 'books/newbook', book: @newbook %>


<div class="col-xs-9">
<h2>Book detail</h2>
<table class="table">
    <tr>
        <td>
        <%= link_to (@book.user) do %>
        <%= attachment_image_tag(@book.user, :profile_image, fallback: "no_image.jpg", size: "40x40") %>
        <br>
        <%= @book.user.name %>
        <% end %>
        </td>
        <td><%= link_to @book.title, @book %></td>
        <td><%= @book.body%></td>
        <% if @book.user == current_user %>
        <td><%= link_to "Edit", edit_book_path(@book),class:"btn-sm btn-success" %></td>
        <td>
        <%= link_to "Destroy", book_path(@book), class:"btn-sm btn-danger destroy(@book)", method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
        <% end %>

    </tr>
</table>

