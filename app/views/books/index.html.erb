<div class="row">
  <div class="col-xs-3">

<%= render 'users/userinfo', user: @user %>

<%= render 'books/newbook', book: @book %>

<div class="col-xs-9">
<h1>Books</h1>
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
        <td>
          <%= link_to(book.user) do %>
          <%= attachment_image_tag(book.user, :profile_image, fallback: "no_image.jpg", size: "40x40") %>
          <% end %>
        </td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
    <% end %>
  </tbody>
</table>
</div>


