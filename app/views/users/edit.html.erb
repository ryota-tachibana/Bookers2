<h1>User info</h1>
<%= form_for(@user) do |f| %>
<% if @user.errors.any? %>
<div class=error>
<h4><%= @user.errors.count %>error</h4>
　　<ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    </div>
<% end %>
  <h4>name</h4>
  <%= f.text_field :name %>
  <h4>image</h4>
  <%= f.attachment_field :profile_image %>
  <h4>introduction</h4>
  <%= f.text_area :introduction %>
  <br><%= f.submit 'Update User' %></br>
<% end %>